<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CineHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Estilos do Toast -->
    <style>
        /* Compensação para navbar fixa */
        body {
            padding-top: 70px;
        }

        /* Layout flexbox para footer sempre no final */
        html, body {
            height: 100%;
        }

        .page-wrapper {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .main-content {
            flex: 1;
        }

        /* Garante que o footer tenha texto branco */
        .footer {
            background-color: #212529 !important;
            color: white !important;
            margin-top: auto;
        }

            .footer .text-center {
                color: white !important;
            }

        /* Container do Toast */
        .toast-container {
            position: fixed;
            top: 90px; /* Ajustado para ficar abaixo da navbar fixa */
            right: 20px;
            z-index: 9999;
            max-width: 350px;
        }

        /* Estilos base do Toast */
        .toast {
            display: flex;
            align-items: center;
            padding: 16px 20px;
            margin-bottom: 12px;
            border-radius: 12px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            font-size: 14px;
            font-weight: 500;
            color: white;
            position: relative;
            overflow: hidden;
            transform: translateX(400px);
            opacity: 0;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

            /* Animação de entrada */
            .toast.show {
                transform: translateX(0);
                opacity: 1;
            }

            /* Animação de saída */
            .toast.hide {
                transform: translateX(400px);
                opacity: 0;
            }

            /* Tipos de toast */
            .toast.success {
                background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            }

            .toast.warning {
                background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
                color: #212529;
            }

            .toast.error {
                background: linear-gradient(135deg, #dc3545 0%, #e74c3c 100%);
            }

            .toast.info {
                background: linear-gradient(135deg, #007bff 0%, #6610f2 100%);
            }

        /* Ícone do toast */
        .toast-icon {
            width: 24px;
            height: 24px;
            margin-right: 12px;
            flex-shrink: 0;
        }

        /* Conteúdo do toast */
        .toast-content {
            flex: 1;
            line-height: 1.4;
        }

        /* Botão de fechar */
        .toast-close {
            background: none;
            border: none;
            color: inherit;
            font-size: 20px;
            cursor: pointer;
            margin-left: 12px;
            padding: 0;
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            transition: background-color 0.2s ease;
        }

            .toast-close:hover {
                background-color: rgba(0, 0, 0, 0.1);
            }

        .toast.warning .toast-close:hover {
            background-color: rgba(0, 0, 0, 0.1);
        }

        /* Barra de progresso */
        .toast-progress {
            position: absolute;
            bottom: 0;
            left: 0;
            height: 3px;
            background: rgba(255, 255, 255, 0.3);
            border-radius: 0 0 12px 12px;
            animation: progress 5s linear forwards;
        }

        .toast.warning .toast-progress {
            background: rgba(0, 0, 0, 0.2);
        }

        @@keyframes progress {
            from {
                width: 100%;
            }

            to {
                width: 0%;
            }
        }

        /* Efeito de hover */
        .toast:hover .toast-progress {
            animation-play-state: paused;
        }

        /* Responsividade */
        @@media (max-width: 768px) {
            body {
                padding-top: 60px;
            }

            .toast-container {
                top: 70px;
                right: 10px;
                left: 10px;
                max-width: none;
            }

            .toast {
                transform: translateY(-100px);
            }

                .toast.show {
                    transform: translateY(0);
                }

                .toast.hide {
                    transform: translateY(-100px);
                }
        }
    </style>
</head>
<body>
    <div class="page-wrapper">
        <!-- Container do Toast -->
        <div id="toast-container" class="toast-container"></div>

        <header>
            <!-- Navbar fixa no topo -->
            <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top">
                <div class="container">
                    <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                        🎬 CineHub
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Movies" asp-action="Index">Filmes</a>
                            </li>
                            @if (Context.Session.GetInt32("UserId") != null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Favorites">❤️ Favoritos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="MyRatings">⭐ Minhas Avaliações</a>
                                </li>
                            }
                        </ul>
                        <ul class="navbar-nav">
                            @if (Context.Session.GetInt32("UserId") != null)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        👤 @Context.Session.GetString("UserName")
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                                🏠 Meu Perfil
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Account" asp-action="MyRatings">
                                                ⭐ Minhas Avaliações
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Account" asp-action="Favorites">
                                                ❤️ Meus Favoritos
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                                <button type="submit" class="dropdown-item">
                                                    🚪 Sair
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Login">🔑 Entrar</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Register">✨ Registrar</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container main-content">
            <main role="main" class="pb-3 mt-4">
                @RenderBody()
            </main>
        </div>

        <!-- Footer com texto branco -->
        <footer class="border-top footer bg-dark text-white">
            <div class="container py-3">
                <div class="text-center">
                    &copy; 2025 - CineHub - Desenvolvido por Marcus Vinicius Freire Martins
                </div>
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        const toastIcons = {
            success: `<svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                            </svg>`,
            warning: `<svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                                <path d="M1 21h22L12 2 1 21zm12-3h-2v-2h2v2zm0-4h-2v-4h2v4z"/>
                            </svg>`,
            error: `<svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                                <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
                            </svg>`,
            info: `<svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/>
                            </svg>`
        };

        function showToast(message, type = 'info', duration = 5000) {
            const container = document.getElementById('toast-container');

            const toast = document.createElement('div');
            toast.className = `toast ${type}`;

            toast.innerHTML = `
                                <div class="toast-icon">${toastIcons[type] || toastIcons.info}</div>
                                <div class="toast-content">${message}</div>
                                <button class="toast-close" onclick="hideToast(this)">&times;</button>
                                <div class="toast-progress"></div>
                            `;

            container.appendChild(toast);

            setTimeout(() => {
                toast.classList.add('show');
            }, 10);

            setTimeout(() => {
                hideToast(toast.querySelector('.toast-close'));
            }, duration);
        }

        function hideToast(closeButton) {
            const toast = closeButton.closest('.toast');
            toast.classList.remove('show');
            toast.classList.add('hide');

            setTimeout(() => {
                if (toast.parentNode) {
                    toast.parentNode.removeChild(toast);
                }
            }, 400);
        }

        document.addEventListener('DOMContentLoaded', function () {
        @if (TempData["ToastMessage"] != null)
        {
            <text>
                    showToast('@Html.Raw(TempData["ToastMessage"])', '@(TempData["ToastType"] ?? "info")');
            </text>
        }
                        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>