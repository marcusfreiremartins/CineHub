@model CineHub.Models.ViewModels.Account.RegisterViewModel
@{
    ViewData["Title"] = "Registrar";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow">
            <div class="card-header bg-success text-white text-center">
                <h3>🎬 Criar Conta no CineHub</h3>
            </div>
            <div class="card-body">
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Nome de Usuário</label>
                        <input asp-for="Name" class="form-control" placeholder="Digite seu nome de usuário" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <div class="form-text">Este será seu nome público no CineHub.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Digite seu email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Senha</label>
                        <input asp-for="Password" class="form-control" placeholder="Digite sua senha" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <div class="form-text">Mínimo de 6 caracteres.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Confirmar Senha</label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirme sua senha" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            ✨ Criar Conta
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <p class="mb-0">
                    Já tem uma conta?
                    <a asp-action="Login" class="text-decoration-none">
                        Faça login aqui
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}